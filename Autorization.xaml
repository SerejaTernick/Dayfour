<Window x:Class="Dayfour.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dayfour"
        mc:Ignorable="d"
      Title="Авторизация" Height="420" Width="350">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="/фон2.png"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="tbLogin" HorizontalAlignment="Center" Margin="0,75,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="210" Height="20" Grid.Column="1" BorderBrush="{x:Null}" />
        <TextBlock HorizontalAlignment="Left" Margin="0,54,0,0" TextWrapping="Wrap" Text="Логин:" VerticalAlignment="Top" Height="16" Width="46" Grid.Column="1" FontFamily="Microsoft YaHei UI Light"/>
        <TextBox x:Name="tbPassord"  HorizontalAlignment="Center" Margin="0,134,0,0" TextWrapping="NoWrap" Text="" VerticalAlignment="Top" Width="210" Height="20" BorderBrush="{x:Null}" Grid.ColumnSpan="3" SelectionBrush="{x:Null}" Background="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,113,0,0" TextWrapping="Wrap" Text="Пароль:" VerticalAlignment="Top" Height="16" Width="96" Grid.Column="1" FontFamily="Microsoft YaHei UI Light"/>
        <Button x:Name="btLogin" Content="Вход"  Foreground="White" HorizontalAlignment="Center" Margin="36,211,35,0" VerticalAlignment="Top" Width="134" Height="33" Grid.Column="1" FontFamily="Footlight MT Light" FontSize="18" Click="btLogin_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="кнопка.png"/>
            </Button.Background>
        </Button>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="0,159,0,0" Stroke="Black" VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.017,-0.875"/>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="0,100,0,0" Stroke="Black" VerticalAlignment="Top" Width="205" RenderTransformOrigin="0.017,-0.875"/>
    </Grid>
</Window>
